{% extends 'base.html.twig' %}

{% block title %}Connexion!{% endblock %}

{% block body %}

<form class="form" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <div class="registerbutton">
        <a class="btn btn-primary" href="{{ path('app_register') }}">
            Cr√©er un compte
        </a>
    </div>

    <div>

        <label for="inputEmail">Email</label>
        <input type="text" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Username" id="username">
    </div>

    <div>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" placeholder="password" id="password" class="form-control" required>
    </div>

    <div>
        <input type="hidden" name="_csrf_token"

        value="{{ csrf_token('authenticate') }}">
        <input type="submit" value="Se connecter">
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    {# <button class="btn btn-lg btn-primary" type="submit">
        Sign in
    </button> #}

</form>
{% endblock %}
